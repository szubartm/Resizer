@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Upload image</h1>
</div>
<div class="container">
    <div class="mb-3 mt-3">
        <form method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label">Upload file</label>
                <input type="file" name="images" class="form-control" multiple="multiple" />
            </div>
            <div class="mb-3">
                <label class="form-label">Width</label>
                <input type="text" name="widthString" class="form-control" />
                <label class="form-label">Height</label>
                <input type="text" name="heightString" class="form-control" />
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Upload</button>
            </div>
        </form>
    </div>
</div>

